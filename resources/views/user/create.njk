{% extends "master" %}

{% block content %}
  <div class="columns">
    <div class="column is-half is-offset-3">
      <div class="card is-fullwidth">
        <div class="card-header">
          <h2 class="card-header-title">Register</h2>
        </div>
        <div class="card-content">
          {{ form.open({ action: 'UserController.store' }) }}

          {{ csrfField }}

          <div class="control">
            {{ form.label('email', 'Email') }}
            {{ form.text('email', null, { class: 'input', placeholder: 'Email' }) }}
          </div>

          <div class="control">
            {{ form.label('password', 'Password') }}
            {{ form.password('password', null, { class: 'input', placeholder: 'Password' }) }}
          </div>

          <div class="control">
            {{ form.label('password_confirmation', 'Confirm Password') }}
            {{ form.password('password_confirmation', null, { class: 'input', placeholder: 'Confirm Password' }) }}
          </div>

          <p class="control">
            <a href="/login" class="button">Login</a>
            {{ form.submit('Register', null, { class: 'button is-primary' }) }}
          </p>

          {{ form.close() }}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
